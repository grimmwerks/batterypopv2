<section class="wrapper">

<!-- top part -->
	<div class="poll row clearfix">
		<div class="col-md-12 column">
			<div class="poll_scene">

				<img class="poll_scene_layer" src="<%= @poll_scene.image.url %>" />
			
			</div>
		     
		</div>
	</div>
<!-- end top part -->

<!-- download button -->
	<div class="row row-nomargin clearfix">

		<div class="poll banner theme-green">

			<div class="well well-frame col-md-12">
			
				<div class="col-md-9">
				<h2>Download your scene!</h2>
				<p>Click the button and download the scene you created:</p>
				</div>

				<div class="col-md-3">
					<%= link_to "Download", @poll_scene.image.url(:original, false), html_options ={id: "poll_scene_download", class: "btn btn-lg btn-primary btn-block", "data-override" => "true"} %>


				</div>

			</div>

		</div>
	</div>

<!-- end submit button -->



<!-- item.chicago_votes / pq.chicago_votes  -->


	
	<% pos = 0 %>
	<div class="row clearfix">
		<div class="col-md-12 column">
		<% @poll.poll_questions.reorder(:order).each do |pq| %>
	
		<%  if(pos >= (colors.count-1)) 
            pos =0 
          else
            pos = pos + 1
          end
        %>

		<!-- draw panel -->

			<div class="row clearfix">
				<div class="col-md-12">
					<div class="panel-split panel-frame panel panel-<%= colors[pos] %> clearfix">

						<div class="poll summary">
						 	<h2><%= pq.title %></h2>
					 	</div>

						<ul class="list-group list-group-poll block-grid-sm-3 block-grid-md-4">
						<% pq.poll_answers.each do |item| %>
							<li class="list-group-item block-grid-item">
						      	<div class="row clearfix">
						      		<div class="col-xs-8">
							      		<%=  image_tag(item.slide_image, :height => '90', :class => "thumbnail") %>
							    	<h4><%= item.title %></h4>
								   	</div>
								   	<div class="col-xs-4">
									    <div class="button-pop vote">
										    <div class="pop-number"><%= item.vote_percentage %>%
										</div>
									</div>
									
								</div>
							</li>


						<% end %>
						</ul>



					</div>
				</div>
			</div>
		<!-- end draw panel -->
	





		<% end %>


		</div>
	</div>



</section>